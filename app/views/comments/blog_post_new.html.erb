<h2>Blog comment</h2>

<%= error_messages_for :comment %>

<h3>Leave a comment</h3>

<% form_for :comment, :url => blog_post_comments_path(@blog, @post) do |f| %>
  <div class="form_row">
    <%= f.text_area :body %>
  </div>
  
  <div class="form_row">
    <%= submit_tag "Submit", :class => "button" %>
  </div>
<% end %>