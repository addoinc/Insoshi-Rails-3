<%- column_div :type => :primary, :class => "hentry" do -%>
  <h2 class="entry-title"><%= h @topic.name %></h2>
  <ul class="list topic full">
    <%= render :partial => 'forum_post', :collection => @posts %>
  </ul>

  <h2>Add Reply</h2>

  <p><%= formatting_note %></p>

  <%= error_messages_for :post %>

  <% form_for :post,
              :url => forum_topic_posts_path(@forum, @topic)  do |f| %>
    <div class="form_row">
      <%= f.text_area :body, :rows => 10, :cols => 30 %>
    </div>

    <div class="form_row">
      <%= f.submit "Submit", :class => "button" %>
    </div>
  <% end %>

<%- end -%>

<%- column_div :type => :secondary do -%>
  <%= render :partial => 'shared/minifeed' %>
<%- end -%>
